// Create a single ResizeObserver (efficient for multiple elements)
const resizeObserver = new ResizeObserver(entries => {

if (resizeObserver.timeoutId) {
    clearTimeout(resizeObserver.timeoutId);
  }
   
  
  // Set new timeout (e.g., 100â€“200ms is good for most UI work)
  resizeObserver.timeoutId = setTimeout(() => {
  // This runs only after 150ms of no new resize events

  for (const entry of entries) {
       const e = entry.target;
       const b = {Event: "Resize",
                  TargetId: e.id, 
                  CurrentTargetId: e.id, 
                  Height: e.clientHeight,
                  Width: e.clientWidth}; 
       const m = JSON.stringify(b); 
       ws.send (m)
  }
    // Clean up
    resizeObserver.timeoutId = null;
  }, 150);
});


