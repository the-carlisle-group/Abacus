 Update←{
     ⍝ ⍺ ←→ ProgressBar instance
     ⍝ ⍵ ←→ Message
     ⍝ ← ←→ 'Cancel'|'Resume'|'Truncate'
     p←⍺
     p.Status←⍵
     p.Iteration+←1
     0≠p.UpdatePeriod|p.Iteration:'Resume'
     _←p UpdateStatus ⍵
     p.Canceled:'Cancel'
     p.Truncated:'Truncate'
     ~p.Paused:'Resume'
     r←⊃⎕TGET p.PauseToken
     p.Paused←0
     r
 }
